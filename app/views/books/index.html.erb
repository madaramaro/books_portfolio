<p style="color: green"><%= notice %></p>

<h1>Your Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <% if book.image_url.present? %>
        <%= image_tag book.image_url, alt: book.title, class: 'book-image' %>
      <% end %>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>